<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jsung721.ronaldmcdonald_prototype1.TrackMeActivity">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/TrackMe_Mode_Spinner"
        android:spinnerMode="dropdown"
        android:entries = "@array/Track_Mode"
        android:layout_marginStart="44dp"
        android:layout_alignBottom="@+id/TrackMe_Back_Button"
        android:layout_toEndOf="@+id/TrackMe_Back_Button" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Back_Button"
        android:text="@string/Back"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Miles_Title"
        android:text="Miles Run: "
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#9E9E9E"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="169dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Miles_Value"
        android:hint="Miles Run"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/TrackMe_Miles_Title"
        android:layout_alignBottom="@+id/TrackMe_Miles_Title"
        android:layout_alignEnd="@+id/TrackMe_Mode_Spinner" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Time_Title"
        android:text="Time Elapsed: "
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#9E9E9E"
        android:layout_below="@+id/TrackMe_Miles_Value"
        android:layout_alignStart="@+id/TrackMe_Miles_Title"
        android:layout_marginTop="24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Time_Value"
        android:hint="Time"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/TrackMe_Time_Title"
        android:layout_alignBottom="@+id/TrackMe_Time_Title"
        android:layout_alignStart="@+id/TrackMe_Miles_Value" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Pace_Title"
        android:text="Current Pace: "
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#9E9E9E"
        android:layout_below="@+id/TrackMe_Time_Title"
        android:layout_alignStart="@+id/TrackMe_Time_Title"
        android:layout_marginTop="18dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Pace_Value"
        android:hint="Pace"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/TrackMe_Pace_Title"
        android:layout_alignBottom="@+id/TrackMe_Pace_Title"
        android:layout_alignStart="@+id/TrackMe_Time_Value" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TrackMe_Track_Button"
        android:textColor="#000000"
        android:text="Start Tracking"
        android:textAlignment="center"
        android:textSize="35dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
