<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.jsung721.ronaldmcdonald_prototype1.Main3Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GraphsTitle"
        android:text="      Graphs     "
        android:textSize="30dp"
        android:textAlignment="center"
        android:background="#9E9E9E"
        android:textColor="#B71C1C"
        android:layout_marginStart="69dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pmMainMenu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pmMainMenu"
        android:text="<-"
        android:textSize="40dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_alignBaseline="@+id/GraphsTitle"
        android:layout_alignBottom="@+id/GraphsTitle"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerTime"
        android:text="@string/Select_Time"
        android:textSize="15dp"
        android:textColor="#B71C1C"
        android:layout_alignBaseline="@+id/SelectTime"
        android:layout_alignBottom="@+id/SelectTime"
        android:layout_alignParentStart="true" />
    <Spinner
        android:id="@+id/SelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/pmMainMenu"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerStat"
        android:text="@string/Select_Stat"
        android:textSize="15dp"
        android:textColor="#B71C1C"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/SelectTime"
        android:layout_alignEnd="@+id/SpinnerTime" />

    <Spinner
        android:id="@+id/SelectStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SpinnerStat"
        android:layout_alignBottom="@+id/SpinnerStat"
        android:layout_alignStart="@+id/SelectTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerStatType"
        android:text="@string/Select_StatType"
        android:textSize="15dp"
        android:textColor="#B71C1C"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/SelectStat"
        android:layout_alignStart="@+id/SpinnerStat" />

    <Spinner
        android:id="@+id/SelectStatType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/SpinnerStatType"
        android:layout_alignBottom="@+id/SpinnerStatType"
        android:layout_alignStart="@+id/SelectStat" />
</RelativeLayout>
