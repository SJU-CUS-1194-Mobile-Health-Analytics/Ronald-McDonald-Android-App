<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.jsung721.ronaldmcdonald_prototype1.SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_settings"
        android:text="Settings"
        android:textSize="45dp"
        android:textColor="@color/light_gray"
        android:background = "@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_settings_log_out"
        android:text="LOG OUT"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:background = "@color/maroon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_settings_edit_user"
        android:text="Edit Account"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:background = "@color/light_gray"
        android:layout_below="@+id/text_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Settings_Delete_Button"
        android:text="Delete Account"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:background = "@color/light_gray"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/button_settings_edit_user"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_settings_clear_history"
        android:text="Clear History"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:background = "@color/light_gray"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/Settings_Delete_Button"
        android:layout_alignStart="@+id/button_settings_edit_user" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_settings_to_menu"
        android:text="@string/Back"
        android:textSize="20dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/text_settings"
        android:layout_toStartOf="@+id/button_settings_log_out" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_settings_app_logo"
        android:src="@drawable/app_logo"
        android:layout_below="@+id/text_settings"
        android:layout_toEndOf="@+id/button_settings_to_menu" />

</RelativeLayout>
