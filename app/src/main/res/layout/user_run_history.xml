<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.jsung721.ronaldmcdonald_prototype1.UserHistoryActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/UserProfPic"
        android:src = "@drawable/portrait"
        android:gravity="center"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/History_Title"
        android:layout_centerHorizontal="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/History_Title"
    android:text="[User]'s Run History"
    android:fontFamily="sans-serif-smallcaps"
    android:textSize="30dp"
        android:textColor="#B71C1C"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryTotalMiles_Title"
        android:text="Total Miles: "
        android:textSize="20dp"
        android:textColor="#B71C1C"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/HistoryDailyLog_Button"
        android:layout_toStartOf="@+id/HistoryMiles_Value"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryMiles_Value"
        android:hint = "Miles"
        android:textColorHint="#999999"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/HistoryTotalMiles_Title"
        android:layout_alignBottom="@+id/HistoryTotalMiles_Title"
        android:layout_alignEnd="@+id/HistoryDailyLog_Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryTotalTime_Title"
        android:text="Total Time: "
        android:textSize="20dp"
        android:textColor="#B71C1C"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/HistoryTotalMiles_Title"
        android:layout_alignStart="@+id/HistoryTotalMiles_Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryTime_Value"
        android:hint = "Time"
        android:textSize="20dp"
        android:textColorHint="#999999"
        android:layout_alignBaseline="@+id/HistoryTotalTime_Title"
        android:layout_alignBottom="@+id/HistoryTotalTime_Title"
        android:layout_alignStart="@+id/HistoryMiles_Value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryAvgPace_Title"
        android:text="Average Pace: "
        android:textSize="20dp"
        android:textColor="#B71C1C"
        android:layout_below="@+id/HistoryTotalTime_Title"
        android:layout_toStartOf="@+id/HistoryTime_Value"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryAvgPace_Value"
        android:hint = "Pace"
        android:textSize="20dp"
        android:textColorHint="#999999"
        android:layout_alignBaseline="@+id/HistoryAvgPace_Title"
        android:layout_alignBottom="@+id/HistoryAvgPace_Title"
        android:layout_alignEnd="@+id/HistoryDailyLog_Button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryGraph_Button"
        android:text="See Graph"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/History_Back_Button"
        android:text="@string/Back"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/History_Title"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HistoryDailyLog_Button"
        android:text="Daily Log"
        android:textSize="25dp"
        android:layout_below="@+id/UserProfPic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

</RelativeLayout>
